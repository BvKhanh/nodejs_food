<div class="mt-4">
  <div class="row">
    {{#each foods}}
      <div class="col-sm-6 col-lg-3">
        <div class="card">
          <img src="{{this.image}}"" class="card-img-top" alt="Hình ảnh món ăn">
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text">{{this.description}}</p>
            <a href="#" class="btn btn-primary">Chọn món ăn</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>

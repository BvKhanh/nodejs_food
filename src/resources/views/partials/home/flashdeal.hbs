<script>
    // Thay đổi thời gian kết thúc ở đây (ví dụ: 1 giờ từ bây giờ)
    const countdownDate = new Date().getTime() + 3600 * 1000; // 1 giờ

    const countdownFunction = setInterval(() => {
        const now = new Date().getTime();
        const distance = countdownDate - now;

        // Tính toán thời gian còn lại
        const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((distance % (1000 * 60)) / 1000);

        // Hiển thị kết quả trong phần tử countdown
        document.getElementById("countdown").innerHTML = `${hours}h ${minutes}m ${seconds}s`;

        // Nếu đếm ngược kết thúc
        if (distance < 0) {
            clearInterval(countdownFunction);
            document.getElementById("countdown").innerHTML = "Đã kết thúc!";
        }
    }, 1000);
</script>
<script>
    let prevBtn = document.getElementById('intro-prev');
    let nextBtn = document.getElementById('intro-next');
    let imageContainer = document.querySelector('.intro-images');
    let imageItems = document.querySelectorAll('.intro-image-item');
    let contentItems = document.querySelectorAll('.intro-content-item');

    let currentIndex = 0;
    let totalItems = imageItems.length;
    let rotateStep = 360 / totalItems;
    let currentRotation = 0;

    function showSlider() {
        imageContainer.style.setProperty("--rotate", currentRotation + 'deg');
        contentItems.forEach((item, index) => {
            item.classList.toggle('active', index === currentIndex);
        });
    }

    function nextSlide() {
        currentIndex = (currentIndex + 1) % totalItems;
        currentRotation += rotateStep;
        showSlider();
    }

    function prevSlide() {
        currentIndex = (currentIndex - 1 + totalItems) % totalItems;
        currentRotation -= rotateStep;
        showSlider();
    }

    nextBtn.onclick = nextSlide;
    prevBtn.onclick = prevSlide;
    setInterval(nextSlide, 3000);
</script>

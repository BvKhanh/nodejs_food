<div class="container mt-4">
    <h2>Admin Dashboard</h2>

    <div class="row">
        <!-- Biểu đồ cột -->
        <div class="col-md-6">
            <canvas id="barChart"></canvas>
        </div>

        <!-- Biểu đồ tròn -->
        <div class="col-md-6">
            <canvas id="pieChart"></canvas>
        </div>
    </div>

    <div class="row mt-4">
        <!-- Biểu đồ đường -->
        <div class="col-md-6">
            <canvas id="lineChart"></canvas>
        </div>

        <!-- Biểu đồ ngang: Món ăn đặt nhiều nhất -->
        <div class="col-md-6">
            <canvas id="topFoodChart"></canvas>
        </div>
    </div>
</div>


<script>
    window.onload = function() {
        if (!document.getElementById('barChart') || 
            !document.getElementById('pieChart') || 
            !document.getElementById('lineChart') || 
            !document.getElementById('topFoodChart')) {
            console.error("Không tìm thấy phần tử canvas!");
            return;
        }

        // Biểu đồ cột: Doanh thu theo tháng
        const barCtx = document.getElementById('barChart').getContext('2d');
        new Chart(barCtx, {
            type: 'bar',
            data: {
                labels: ['Tháng 1', 'Tháng 2', 'Tháng 3', 'Tháng 4', 'Tháng 5', 'Tháng 6'],
                datasets: [{
                    label: 'Doanh thu (triệu VNĐ)',
                    data: [50, 75, 60, 90, 120, 100], 
                    backgroundColor: 'rgba(54, 162, 235, 0.6)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Biểu đồ tròn: Tỉ lệ đơn hàng theo trạng thái
        const pieCtx = document.getElementById('pieChart').getContext('2d');
        new Chart(pieCtx, {
            type: 'pie',
            data: {
                labels: ['Đã giao', 'Đang giao', 'Bị hủy'],
                datasets: [{
                    data: [60, 30, 10], 
                    backgroundColor: ['#28a745', '#ffc107', '#dc3545']
                }]
            },
            options: {
                responsive: true
            }
        });

        // Biểu đồ đường: Số người dùng đăng ký theo ngày trong tháng này
        const lineCtx = document.getElementById('lineChart').getContext('2d');
        new Chart(lineCtx, {
            type: 'line',
            data: {
                labels: ['1', '5', '10', '15', '20', '25', '30'], 
                datasets: [{
                    label: 'Số người đăng ký',
                    data: [5, 10, 15, 20, 30, 25, 40], 
                    borderColor: 'rgba(255, 99, 132, 1)',
                    backgroundColor: 'rgba(255, 99, 132, 0.2)',
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Biểu đồ ngang: Món ăn đặt nhiều nhất
        const topFoodCtx = document.getElementById('topFoodChart').getContext('2d');
new Chart(topFoodCtx, {
    type: 'bar', // Đổi 'horizontalBar' thành 'bar' vì Chart.js 3+ không hỗ trợ
    data: {
        labels: ['Pizza', 'Burger', 'Sushi', 'Bánh Mì', 'Cơm Tấm'],
        datasets: [{
            label: 'Số lượng đặt hàng',
            data: [120, 90, 60, 75, 100], 
            backgroundColor: ['#ff5733', '#33ff57', '#3357ff', '#ff33a8', '#ffbd33']
        }]
    },
    options: {
        responsive: true,
        indexAxis: 'y', // Cần có để hiển thị ngang
        scales: {
            x: {
                beginAtZero: true
            }
        }
    }
});

    };
</script>
